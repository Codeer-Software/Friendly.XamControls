<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Custom="http://infragistics.com/Windows" x:Class="XamApp.XamTabControlWindow"
        Title="XamTabControlWindow" Height="300" Width="300">
    <Grid>

        <Custom:XamTabControl>
            <Custom:TabItemEx Header="tab0">
                <Grid>
                    <TextBlock Text="0"/>
                </Grid>
            </Custom:TabItemEx>
            <Custom:TabItemEx Header="tab1">
                <Grid>
                    <TextBlock Text="1"/>
                </Grid>
            </Custom:TabItemEx>
            <Custom:TabItemEx Header="tab2">
                <Grid>
                    <TextBlock Text="2"/>
                </Grid>
            </Custom:TabItemEx>
        </Custom:XamTabControl>
    </Grid>
</Window>
