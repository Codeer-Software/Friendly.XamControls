<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Custom="http://infragistics.com/Ribbon" x:Class="XamApp.XamRibbonWindow"
        Title="XamRibbonWindow" Height="300" Width="300">
    <Grid>

        <Custom:XamRibbon x:Name="_ribbon">
            <Custom:XamRibbon.ApplicationMenu>
                <Custom:ApplicationMenu>
                    <Custom:ToolMenuItem Header="a"/>
                    <Custom:ToolMenuItem Header="b">
                        <Custom:ToolMenuItem Header="b-1">
                            <Custom:ToolMenuItem Header="b-1-1" Click="Click_B_1_1">
                            </Custom:ToolMenuItem>
                        </Custom:ToolMenuItem>
                    </Custom:ToolMenuItem>
                </Custom:ApplicationMenu>
                
            </Custom:XamRibbon.ApplicationMenu>
            
            <Custom:XamRibbon.QuickAccessToolbar>
                <Custom:QuickAccessToolbar/>
            </Custom:XamRibbon.QuickAccessToolbar>
        </Custom:XamRibbon>

    </Grid>
</Window>
